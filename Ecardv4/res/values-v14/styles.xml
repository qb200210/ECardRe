<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle"> @style/MyActionBar </item>
        <item name="actionBarStyle"> @style/MyActionBar </item>        
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
    </style>
    
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/striped_background</item>
        <item name="android:icon">@color/transparent</item>
        <item name="android:displayOptions"></item>
        <item name="background">@drawable/striped_background</item>
        <item name="icon">@color/transparent</item>
        <item name="displayOptions"></item>
    </style>
    
    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

</resources>
