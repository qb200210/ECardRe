<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="Default Messages" >
        <Preference android:title="Email"
                android:key="@string/prefEmailGreeting"
                android:summary="@string/prefEmailGreeting"/>
        
        <Preference android:title="SMS"
                android:key="@string/prefSMSGreeting"
                android:summary="@string/prefSMSGreeting"/>
        
        <Preference android:title="Document"
                android:key="@string/prefDocGreeting"
                android:summary="@string/prefDocGreeting"/>
        
    </PreferenceCategory>
    
    <PreferenceCategory android:title="General Settings" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="prefPushNotifications"
            android:title="Push Notifications"
            android:summary="Receive Push Notifications" >
        </CheckBoxPreference>        
        
        <ListPreference
            android:key="prefReminderFrequency"
            android:title="Reminder Frequency"
            android:summary="For Getting Back in Touch"
            android:entries="@array/updateFrequency"
            android:entryValues="@array/updateFrequencyValues"
            />
        
    </PreferenceCategory>
     
    <PreferenceCategory android:title="About" >
        
        
        <Preference android:title="Version"
                android:key="@string/prefVersionNumber"
            android:summary="@string/prefVersionNumber"/>

        <Preference android:title="Feedback"
                android:key="@string/prefFeedBack"
                android:summary="@string/prefFeedBack"/>
        
        <Preference android:title="Please Give Us 5 Stars!"
                android:key="@string/prefRateUs"
            android:summary="@string/prefRateUs"/>
        
        
    </PreferenceCategory>
    <Preference android:title="Logout"
                android:key="@string/prefLogoutButton"/>

</PreferenceScreen>