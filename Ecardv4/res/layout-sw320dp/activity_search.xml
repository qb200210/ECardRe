<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        android:orientation="vertical" >

        <se.emilsjolander.stickylistheaders.StickyListHeadersListView
            android:id="@+id/activity_stickylistheaders_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="0dp"
            android:focusable="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnlayout_no_results"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background_gradient"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="No results!" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnlayout_search_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/semi_rounded_inverted"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:id="@+id/llayout_where_met"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_where" />

            <AutoCompleteTextView
                android:id="@+id/txt_where_met"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/semi_rounded_right"
                android:hint="Search meeting place ..."
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llayout_company"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_company" />

            <AutoCompleteTextView
                android:id="@+id/txt_company"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/semi_rounded_right"
                android:hint="Search Company ..."
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llayout_event_met"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_event" />

            <AutoCompleteTextView
                android:id="@+id/txt_event_met"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/semi_rounded_right"
                android:hint="Search Events ..."
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/semi_rounded_inverted"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lnlayout_search_widget"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="2dp"
            android:paddingTop="5dp" >

            <AutoCompleteTextView
                android:id="@+id/txt_autocomplete_search"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.80"
                android:background="@drawable/rounded"
                android:hint="Start searching ..."
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="10dp" />

            <Button
                android:id="@+id/btn_search_inside"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_search_blue"
                android:padding="10dp"
                android:scaleType="fitXY" />

            <Button
                android:id="@+id/btn_clear_filter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_clear"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>