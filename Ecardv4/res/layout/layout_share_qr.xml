<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dialog_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.micklestudios.knowell.utils.RobotoTextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:robotoFont="Roboto-Regular.ttf" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="left|center_vertical" >

        <com.micklestudios.knowell.utils.SquareLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:padding="0dp" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:src="@drawable/profile" >
            </ImageView>
        </com.micklestudios.knowell.utils.SquareLayout>

        <com.micklestudios.knowell.utils.RobotoEditText
            android:id="@+id/target_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:hint="Name (optional)"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal"
            app:robotoFont="Roboto-Bold.ttf" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/my_portrait"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:background="@color/grey_500" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="left|center_vertical" >

        <com.micklestudios.knowell.utils.SquareLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:padding="0dp" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:src="@drawable/mail_lite" >
            </ImageView>
        </com.micklestudios.knowell.utils.SquareLayout>

        <com.micklestudios.knowell.utils.RobotoEditText
            android:id="@+id/target_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:hint="Email"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal"
            android:text = ""
            app:robotoFont="Roboto-Bold.ttf" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/my_portrait"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="0dp"
            android:background="@color/grey_500" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="0dp"
            android:src="@drawable/or_lite" >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="left|center_vertical" >

        <com.micklestudios.knowell.utils.SquareLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:padding="0dp" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:src="@drawable/message_lite" >
            </ImageView>
        </com.micklestudios.knowell.utils.SquareLayout>

        <com.micklestudios.knowell.utils.RobotoEditText
            android:id="@+id/target_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:hint="Phone number"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal"
            app:robotoFont="Roboto-Bold.ttf" />
    </RelativeLayout>
    
    <View android:background="@color/grey_500" 
				 android:layout_width = "match_parent"
				 android:layout_height="1dp"
				 android:layout_centerVertical ="true"
				 android:layout_below="@id/my_portrait"
				 android:layout_marginTop="0dp"
				 android:layout_marginLeft="10dp"
				 android:layout_marginRight="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left" 
        android:layout_marginBottom="12dp">

        <com.micklestudios.knowell.utils.SquareLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:padding="0dp" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:src="@drawable/note_lite" >
            </ImageView>
        </com.micklestudios.knowell.utils.SquareLayout>

        <com.micklestudios.knowell.utils.RobotoEditText
            android:id="@+id/target_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:hint="Notes for record (optional)"
            android:maxLength="500"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal"
            android:gravity="top"
            app:robotoFont="Roboto-Bold.ttf" />
    </RelativeLayout>

</LinearLayout>