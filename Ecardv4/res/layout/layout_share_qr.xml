<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dialog_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal" >
        
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/share_button" />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
              />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="left|center_vertical" >

        <RelativeLayout
        	android:id="@+id/share_email_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <com.micklestudios.knowell.utils.SquareLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:padding="0dp" >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:src="@drawable/mail" >
                </ImageView>
            </com.micklestudios.knowell.utils.SquareLayout>

            <EditText
                android:id="@+id/target_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="72dp"
                android:layout_marginRight="45dp"
                android:background="@null"
                android:hint="To this email"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />
			<LinearLayout                 
                android:layout_width="20dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
                android:orientation="vertical">
	            <ImageView
	                android:id="@+id/share_switch2message"
	                android:layout_width="20dp"
	                android:layout_height="20dp"
	                android:clickable="true"
	                android:src="@drawable/message"
	                android:layout_weight="0.5" />
	            
	            
	            <ImageView
	                android:id="@+id/share_direct_link1"
	                android:layout_width="20dp"
	                android:layout_height="20dp"
	                android:clickable="true"
	                android:src="@drawable/link"
	                android:layout_weight="0.5" />
            </LinearLayout>
            
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/share_message_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone" >

            <com.micklestudios.knowell.utils.SquareLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:padding="0dp" >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:src="@drawable/message" >
                </ImageView>
            </com.micklestudios.knowell.utils.SquareLayout>

            <EditText
                android:id="@+id/target_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="72dp"
                android:layout_marginRight="45dp"
                android:background="@null"
                android:hint="To this phone number"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />

            <LinearLayout                 
                android:layout_width="20dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
                android:orientation="vertical">
	            <ImageView
	                android:id="@+id/share_switch2email"
	                android:layout_width="20dp"
	                android:layout_height="20dp"
	                android:clickable="true"
	                android:src="@drawable/mail"
	                android:layout_weight="0.5" />
	            
	            
	            <ImageView
	                android:id="@+id/share_direct_link2"
	                android:layout_width="20dp"
	                android:layout_height="20dp"
	                android:clickable="true"
	                android:src="@drawable/link"
	                android:layout_weight="0.5" />
            </LinearLayout>
        </RelativeLayout>
        
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:gravity="left|center_vertical" >

        <com.micklestudios.knowell.utils.SquareLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:padding="0dp" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:src="@drawable/profile" >
            </ImageView>
        </com.micklestudios.knowell.utils.SquareLayout>

        <EditText
            android:id="@+id/target_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:hint="Who is this for?"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal" />
    </RelativeLayout>

    

</LinearLayout>