<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  
    android:orientation="vertical" >
    
    <com.warpspace.ecardv4.utils.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:background="@drawable/glass_background"  >
    
    	<RelativeLayout
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
		    
        <ImageButton
            android:id="@+id/design_portrait"
            android:layout_width="128dp"
            android:layout_height="128dp" 
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:src="@drawable/ic_action_add_person"/>

        <EditText android:text="FirstName"
            android:id="@+id/design_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/design_portrait"
            android:layout_toRightOf="@+id/design_portrait"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#0a0a0a"
            android:textSize="20sp" />
        
        <EditText android:text="LastName"
            android:id="@+id/design_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/design_portrait"
            android:layout_toRightOf="@+id/design_portrait"
            android:layout_below="@+id/design_first_name"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#0a0a0a"
            android:textSize="20sp" />
        
        <EditText android:text="Title"
            android:id="@+id/design_job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/design_portrait"
            android:layout_toRightOf="@+id/design_portrait"
            android:layout_below="@+id/design_last_name"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#0a0a0a"
            android:textSize="15sp" />
        
         <EditText android:text="Company"
            android:id="@+id/design_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/design_portrait"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:padding="5dp"
            android:textColor="#0a0a0a"
            android:textSize="20sp" />
         
        <EditText android:text="Address"
            android:id="@+id/design_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/design_company"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:padding="5dp"
            android:textColor="#0a0a0a"
            android:textSize="15sp" />
        
        <ImageButton
            android:id="@+id/design_CompanyLogo"
            android:layout_width="96dp"
            android:layout_height="96dp" 
            android:layout_alignParentRight="true"
      		android:layout_alignParentBottom="true" 
      		android:layout_marginRight="20dp"
      		android:layout_marginBottom="20dp"
      		android:background="@null"
      		android:src="@drawable/ic_action_add_logo"
            />
        
    </RelativeLayout>
    
    
    </com.warpspace.ecardv4.utils.SquareLayout>
        

</RelativeLayout>
