<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  
    android:orientation="vertical" >
    
    <com.warpspace.ecardv4.utils.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:background="@drawable/glass_background"  >
    
    	<RelativeLayout 
	        android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:padding="10dp"
		    android:orientation="vertical" >
	    
    	    <com.warpspace.ecardv4.utils.RobotoTextView
    	        android:id="@+id/my_first_name"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_alignParentLeft="true"
    	        android:textSize="14sp"
    	        app:robotoFont="Roboto-Bold.ttf"
    	        android:text="Carlfrankstein Alan Kimberly" />
    	    
    	    <com.warpspace.ecardv4.utils.RobotoTextView
    	        android:id="@+id/my_last_name"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_toRightOf="@id/my_first_name"
    	        android:textSize="14sp"
    	        android:paddingLeft="5dp"
    	        app:robotoFont="Roboto-Bold.ttf"
    	        android:text="Leonhart" />
    	    
    	    <com.warpspace.ecardv4.utils.RobotoTextView
    	        android:id="@+id/my_company"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_below="@id/my_first_name"
    	        android:textSize="14sp"
    	        app:robotoFont="Roboto-Regular.ttf"
    	        android:text="Intel Corporation at Middle-Eastern-MIT joint institute" />
    	    
    	    <com.warpspace.ecardv4.utils.RobotoTextView
    	        android:id="@+id/my_job_title"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_below="@id/my_company"
    	        android:textSize="14sp"
    	        app:robotoFont="Roboto-Regular.ttf"
    	        android:text="Senior Staff Electrical Engineer and Techical Consultant" />
    	    
    	    <com.warpspace.ecardv4.utils.RobotoTextView
    	        android:id="@+id/my_work_phone"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_below="@id/my_job_title"
    	        android:textSize="14sp"
    	        app:robotoFont="Roboto-Regular.ttf"
    	        android:text="800-999-9999" />
    	    
    	        
    	        
        </RelativeLayout>
    
    
    </com.warpspace.ecardv4.utils.SquareLayout>
        

</RelativeLayout>
