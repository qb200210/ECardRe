<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dialog_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.micklestudios.knowell.utils.RobotoTextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:robotoFont="Roboto-Regular.ttf" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="0dp"
        android:gravity="left|center_vertical" >

        <com.micklestudios.knowell.utils.SquareLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:padding="0dp" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:src="@drawable/profile" >
            </ImageView>
        </com.micklestudios.knowell.utils.SquareLayout>

        <com.micklestudios.knowell.utils.RobotoEditText
            android:id="@+id/add_history_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:hint="Who did you share to?"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            app:robotoFont="Roboto-Bold.ttf" />
    </RelativeLayout>
    
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <com.micklestudios.knowell.utils.SquareLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:padding="0dp" >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:src="@drawable/mail" >
                </ImageView>
            </com.micklestudios.knowell.utils.SquareLayout>

            <com.micklestudios.knowell.utils.RobotoEditText
                android:id="@+id/add_history_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="72dp"
                android:layout_marginRight="45dp"
                android:background="@null"
                android:hint="Her/his email?"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal"
                app:robotoFont="Roboto-Bold.ttf" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.micklestudios.knowell.utils.SquareLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:padding="0dp" >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:src="@drawable/message" >
                </ImageView>
            </com.micklestudios.knowell.utils.SquareLayout>

            <com.micklestudios.knowell.utils.RobotoEditText
                android:id="@+id/add_history_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="72dp"
                android:layout_marginRight="45dp"
                android:background="@null"
                android:hint="Her/his phone number?"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal"
                app:robotoFont="Roboto-Bold.ttf" />

        </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="12dp"
        android:gravity="left|center_vertical" >

        <com.micklestudios.knowell.utils.SquareLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:padding="0dp" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:src="@drawable/note_lite" >
            </ImageView>
        </com.micklestudios.knowell.utils.SquareLayout>

        <com.micklestudios.knowell.utils.RobotoEditText
            android:id="@+id/add_history_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        	android:layout_marginTop="10dp"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:gravity="top"
            android:hint="Note for yourself"
            android:maxLength="500"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            app:robotoFont="Roboto-Bold.ttf" />
    </RelativeLayout>

    

</LinearLayout>