<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp" >

    <ImageView
        android:id="@+id/conversations_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/light_blue_F8B"
        android:padding="2dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:layout_toEndOf="@id/conversations_image"
        android:layout_toRightOf="@id/conversations_image"
        android:background="@color/light_blue_F8B"
        android:orientation="vertical"
        android:padding="2dp" >

        <TextView
            android:id="@+id/conversations_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"  />

        <TextView
            android:id="@+id/conversations_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF267F00"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>