<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_100"
        android:orientation="vertical" >

        <se.emilsjolander.stickylistheaders.StickyListHeadersListView
            android:id="@+id/activity_stickylistheaders_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="0dp"
            android:focusable="false" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/lnlayout_no_results"
	    android:layout_width="match_parent"
	    android:layout_height="72dp"
	    android:gravity="left"
	    android:layout_marginTop="200dp"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp" >

	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@drawable/mini_card"
	        android:gravity="left" >
	
	        <ImageView
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:background="@null"
	            android:padding="0dp" 
	            android:src="@drawable/ic_oops"/>
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_centerHorizontal="true"
	            android:orientation="vertical"
	            android:gravity="center"
	            android:paddingLeft="66dp"
	            android:paddingRight="26dp" >
	
	            <TextView
	                android:id="@+id/search_result_card_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:ellipsize="end"
	                android:maxLines="1"
	                android:textColor="@color/black"
	                android:textSize="18sp"
	                android:textStyle="bold"
	                android:text="Ooooooops ..." />
	
	            <TextView
	                android:id="@+id/search_result_card_job_company"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:ellipsize="end"
	                android:maxLines="1"
	                android:textColor="@color/grey_700"
	                android:textSize="14sp"
	                android:text="No results found ..." />
	
	        </LinearLayout>	
	        
	    </RelativeLayout>
	
	</LinearLayout>

    <LinearLayout
        android:id="@+id/lnlayout_search_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/mini_card"
        android:orientation="vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp" >
        
        <LinearLayout
	        android:id="@+id/llayout_where_met"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:orientation="vertical"
	        android:layout_marginTop="10dp"
	        android:paddingBottom="0dp"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
	        android:paddingTop="0dp" >
	        
	        <RelativeLayout            
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="@drawable/mini_card_mod"
	            android:gravity="left|center_vertical"
	            android:padding="0dp" >
	            
	            <LinearLayout
	                android:layout_width="40dp"
	                android:layout_height="40dp"
	                android:layout_alignParentLeft="true"
	                android:background="@drawable/mini_card_button_inverted"
	                android:gravity="center"
	                android:orientation="vertical" >
	
	                <ImageView
	                    android:layout_width="30dp"
	                    android:layout_height="30dp"
	                    android:background="@null"
	                    android:padding="2dp"
	                    android:src="@drawable/ic_location" />
	            </LinearLayout>
	            
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:gravity="left|center_vertical"
	                android:orientation="horizontal"
	                android:paddingLeft="40dp"
	                android:paddingRight="0dp" >
	
	                <AutoCompleteTextView
		                android:id="@+id/txt_where_met"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:background="@null"
		                android:hint="Where met ?"
                    	android:inputType="text"
		                android:maxLines="1"
	                    android:paddingLeft="10dp"
	                    android:paddingRight="50dp"
		                android:textSize="16sp" />	                
	                
	            </LinearLayout>
	
	            <ImageView
	                android:id="@+id/clear_wheremet"
	                android:layout_width="24dp"
	                android:layout_height="24dp"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:layout_marginRight="10dp"
	                android:background="@null"
	                android:padding="0dp"
	                android:src="@drawable/ic_clear" 
	                android:visibility="gone" />
	
	            
	        </RelativeLayout>
		</LinearLayout>
		
        <LinearLayout
	        android:id="@+id/llayout_company"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:orientation="vertical"
	        android:paddingBottom="0dp"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
	        android:paddingTop="0dp" >
	        
	        <RelativeLayout            
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="@drawable/mini_card_mod"
	            android:gravity="left|center_vertical"
	            android:padding="0dp" >
	            
	            <LinearLayout
	                android:layout_width="40dp"
	                android:layout_height="40dp"
	                android:layout_alignParentLeft="true"
	                android:background="@drawable/mini_card_button_inverted"
	                android:gravity="center"
	                android:orientation="vertical" >
	
	                <ImageView
	                    android:layout_width="30dp"
	                    android:layout_height="30dp"
	                    android:background="@null"
	                    android:padding="2dp"
	                    android:src="@drawable/ic_company" />
	            </LinearLayout>
	            
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:gravity="left|center_vertical"
	                android:orientation="horizontal"
	                android:paddingLeft="40dp"
	                android:paddingRight="0dp" >
	
	                <AutoCompleteTextView
		                android:id="@+id/txt_company"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:background="@null"
		                android:hint="What company ?"
                    	android:inputType="text"
		                android:maxLines="1"
	                    android:paddingLeft="10dp"
	                    android:paddingRight="50dp"
		                android:textSize="16sp" />	                
	                
	            </LinearLayout>
	
	            <ImageView
	                android:id="@+id/clear_company"
	                android:layout_width="24dp"
	                android:layout_height="24dp"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:layout_marginRight="10dp"
	                android:background="@null"
	                android:padding="0dp"
	                android:src="@drawable/ic_clear" 
	                android:visibility="gone"/>
	
	            
	        </RelativeLayout>
		</LinearLayout>
        
		<LinearLayout
	        android:id="@+id/llayout_event_met"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:orientation="vertical"
	        android:layout_marginBottom="6dp"
	        android:paddingBottom="0dp"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
	        android:paddingTop="0dp" >
	        
	        <RelativeLayout            
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="@drawable/mini_card_mod"
	            android:gravity="left|center_vertical"
	            android:padding="0dp" >
	            
	            <LinearLayout
	                android:layout_width="40dp"
	                android:layout_height="40dp"
	                android:layout_alignParentLeft="true"
	                android:background="@drawable/mini_card_button_inverted"
	                android:gravity="center"
	                android:orientation="vertical" >
	
	                <ImageView
	                    android:layout_width="30dp"
	                    android:layout_height="30dp"
	                    android:background="@null"
	                    android:padding="2dp"
	                    android:src="@drawable/ic_event" />
	            </LinearLayout>
	            
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:gravity="left|center_vertical"
	                android:orientation="horizontal"
	                android:paddingLeft="40dp"
	                android:paddingRight="0dp" >
	
	                <AutoCompleteTextView
		                android:id="@+id/txt_event_met"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:background="@null"
		                android:hint="Which event ?"
                    	android:inputType="text"
		                android:maxLines="1"
	                    android:paddingLeft="10dp"
	                    android:paddingRight="50dp"
		                android:textSize="16sp" />	                
	                
	            </LinearLayout>
	
	            <ImageView
	                android:id="@+id/clear_eventmet"
	                android:layout_width="24dp"
	                android:layout_height="24dp"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:layout_marginRight="10dp"
	                android:background="@null"
	                android:padding="0dp"
	                android:src="@drawable/ic_clear"
	                android:visibility="gone" />
	
	            
	        </RelativeLayout>
		</LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnlayout_search_menu_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp" >

        <RelativeLayout
            android:id="@+id/lnlayout_search_widget"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mini_card"
            android:gravity="left|center_vertical"
            android:padding="0dp" >
            
            <ImageView
                android:id="@+id/btn_toggle_advsearch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:padding="10dp"
                android:src="@drawable/ic_tri_down_open" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="40dp"
                android:paddingRight="0dp" >

                <AutoCompleteTextView
                    android:id="@+id/txt_autocomplete_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Search here ..."
                    android:imeOptions="actionSearch"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="100dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/clear_all"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60dp"
                android:background="@null"
                android:padding="0dp"                
                android:src="@drawable/ic_clear" 
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/mini_card_button"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/btn_search_inside"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:padding="2dp"
                    android:src="@drawable/ic_action_search" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>