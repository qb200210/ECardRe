<com.warpspace.ecardv4.utils.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view_scanned"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.warpspace.ecardv4.utils.SquareLayout
            android:id="@+id/main_card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <include layout="@layout/layout_maincard_display" />
        </com.warpspace.ecardv4.utils.SquareLayout>

        <!-- This is the note bar -->

        <RelativeLayout
            android:id="@+id/note_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/myrect_note"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal" >

                <com.warpspace.ecardv4.utils.SquareLayoutSpecial
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shadow"
                    android:gravity="center"
                    android:padding="6dp" >

                    <com.warpspace.ecardv4.utils.SquareLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/myrect_note"
                        android:gravity="center"
                        android:padding="0dp" >

                        <ImageView
                			android:id="@+id/bar_note_button"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:padding="2dp"
                            android:src="@drawable/note" >
                        </ImageView>
                    </com.warpspace.ecardv4.utils.SquareLayout>
                </com.warpspace.ecardv4.utils.SquareLayoutSpecial>

	            <LinearLayout
	                android:layout_width="50dp"
	                android:layout_height="match_parent"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:layout_margin="5dp"
	                android:gravity="center_vertical|left" >
	
	                <ImageView
	                    android:id="@+id/bar_play_button"
	                    android:layout_width="40dp"
	                    android:layout_height="40dp"
	                    android:padding="2dp"
	                    android:src="@drawable/play" >
	                </ImageView>
	            </LinearLayout>

	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:layout_marginBottom="9dp"
	                android:layout_marginLeft="75dp"
	                android:layout_marginRight="60dp"
	                android:layout_marginTop="9dp"
	                android:gravity="center_vertical"
	                android:orientation="vertical" >
	
	                <LinearLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent"
	                    android:layout_margin="0dp"
	                    android:layout_weight="1"
	                    android:gravity="center_vertical"
	                    android:orientation="horizontal" >
	
	                    <ImageView
	                        android:layout_width="22dp"
	                        android:layout_height="22dp"
	                        android:layout_gravity="center"
	                        android:padding="0dp"
	                        android:src="@drawable/clock" >
	                    </ImageView>
	
	                    <com.warpspace.ecardv4.utils.RobotoTextView
	                        android:id="@+id/DateAdded1"
	                        android:layout_width="match_parent"
	                        android:layout_height="wrap_content"
	                        android:layout_marginLeft="5dp"
	                        android:textColor="@color/white"
	                        android:textSize="14sp"
	                        android:textStyle="normal"
	                        app:robotoFont="Roboto-Bold.ttf" />
	                </LinearLayout>
	
	                <LinearLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent"
	                    android:layout_margin="0dp"
	                    android:layout_weight="1"
	                    android:gravity="center_vertical"
	                    android:orientation="horizontal" >
	
	                    <ImageView
	                        android:layout_width="22dp"
	                        android:layout_height="22dp"
	                        android:layout_gravity="center"
	                        android:padding="0dp"
	                        android:src="@drawable/location" >
	                    </ImageView>
	
	                    <com.warpspace.ecardv4.utils.RobotoTextView
	                        android:id="@+id/PlaceAdded1"
	                        android:layout_width="match_parent"
	                        android:layout_height="wrap_content"
	                        android:layout_marginLeft="5dp"
	                        android:hint="Mysterious Place"
	                        android:textColorHint="@color/white"
	                        android:textColor="@color/white"
	                        android:textSize="14sp"
	                        android:textStyle="normal"
	                        app:robotoFont="Roboto-Bold.ttf" />
	                </LinearLayout>
	            </LinearLayout>
	        </RelativeLayout>
        </RelativeLayout>

        <!-- This is the end of note bar -->


        <!-- This is the note panel -->

        <RelativeLayout
            android:id="@+id/note_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/myrect_note"
            android:orientation="horizontal" 
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/panel_bar"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal" >

                <com.warpspace.ecardv4.utils.SquareLayoutSpecial
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shadow"
                    android:gravity="center"
                    android:padding="6dp" >

                    <com.warpspace.ecardv4.utils.SquareLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/myrect_note"
                        android:gravity="center"
                        android:padding="0dp" >

                        <ImageView
                			android:id="@+id/panel_note_button"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:padding="2dp"
                            android:src="@drawable/note" >
                        </ImageView>
                    </com.warpspace.ecardv4.utils.SquareLayout>
                </com.warpspace.ecardv4.utils.SquareLayoutSpecial>

                <LinearLayout
                    android:id="@+id/panel_recorder_holder"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical|left" >

                    <ImageView
                    	android:id="@+id/panel_recorder_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="2dp"
                        android:src="@drawable/recorder" >
                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"
                    android:layout_toLeftOf="@id/panel_recorder_holder"
                    android:gravity="center_vertical|left" >

                    <ImageView
                        android:id="@+id/panel_play_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="2dp"
                        android:src="@drawable/play" >
                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="9dp"
                    android:layout_marginLeft="75dp"
                    android:layout_marginRight="120dp"
                    android:layout_marginTop="9dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <com.warpspace.ecardv4.utils.RobotoTextView
                        android:id="@+id/LastUpdated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        app:robotoFont="Roboto-Bold.ttf" />

                    <com.warpspace.ecardv4.utils.RobotoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="Last modified"
                        android:textColor="@color/grey_100"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        app:robotoFont="Roboto-Bold.ttf" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/panel_when_where_what_met"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/panel_bar"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:padding="2dp"
                        android:src="@drawable/clock" >
                    </ImageView>

                    <com.warpspace.ecardv4.utils.RobotoEditText
                        android:id="@+id/DateAdded2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:robotoFont="Roboto-Bold.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:padding="2dp"
                        android:src="@drawable/location" >
                    </ImageView>

                    <com.warpspace.ecardv4.utils.RobotoEditText
                        android:id="@+id/PlaceAdded2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:hint="Mysterious Place"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:robotoFont="Roboto-Bold.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:padding="2dp"
                        android:src="@drawable/event" >
                    </ImageView>

                    <com.warpspace.ecardv4.utils.RobotoEditText
                        android:id="@+id/EventAdded2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:hint="Mysterious Event"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:robotoFont="Roboto-Bold.ttf" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/panel_when_where_what_met"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/myrect_note_text"
                android:orientation="vertical" >

                <com.warpspace.ecardv4.utils.RobotoEditText
                    android:id="@+id/EditNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="Something you want to remember about her/him"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    app:robotoFont="Roboto-Bold.ttf" />
            </LinearLayout>
        </RelativeLayout>

        <!-- This is the end of note panel -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <com.warpspace.ecardv4.utils.ExpandableHeightGridView
                android:id="@+id/gridView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:horizontalSpacing="10dp"
                android:isScrollContainer="false"
                android:numColumns="4"
                android:padding="0dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp" />
        </LinearLayout>
    </LinearLayout>

</com.warpspace.ecardv4.utils.MyScrollView>