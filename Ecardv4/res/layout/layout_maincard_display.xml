<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  
    android:orientation="vertical" >
    
    <com.warpspace.ecardv4.utils.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:background="@drawable/glass_background"  >
    
    	<RelativeLayout
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
		    
        <ImageView
            android:id="@+id/my_portrait"
            android:layout_width="100dp"
            android:layout_height="100dp" 
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

        <TextView android:text="FirstName"
            android:id="@+id/my_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/my_portrait"
            android:layout_toRightOf="@+id/my_portrait"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#0a0a0a"
            android:textSize="25sp" />
        
        <TextView android:text="LastName"
            android:id="@+id/my_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/my_portrait"
            android:layout_toRightOf="@+id/my_portrait"
            android:layout_below="@+id/my_first_name"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#0a0a0a"
            android:textSize="25sp" />
        
        <TextView android:text="Title"
            android:id="@+id/my_job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/my_portrait"
            android:layout_toRightOf="@+id/my_portrait"
            android:layout_below="@+id/my_last_name"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#0a0a0a"
            android:textSize="20sp" />
         
        <TextView android:text="Address"
            android:id="@+id/my_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_company"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:padding="5dp"
            android:textColor="#0a0a0a"
            android:textSize="20sp" />
        
        <ImageView
            android:id="@+id/CompanyLogo"
            android:layout_width="96dp"
            android:layout_height="96dp" 
            android:layout_alignParentRight="true"
      		android:layout_alignParentBottom="true" 
      		android:layout_marginRight="20dp"
      		android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/my_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/CompanyLogo"
            android:layout_alignParentRight="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:text="Company"
            android:textColor="#0a0a0a"
            android:textSize="25sp" />
        
    </RelativeLayout>
    
    
    </com.warpspace.ecardv4.utils.SquareLayout>
        

</RelativeLayout>
