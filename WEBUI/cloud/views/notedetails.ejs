			function goBack() {
				window.history.back();
			}
			
			function confirmDelete() {
				$('#confirmDeletion').modal('show');
			}
			
			function proceedDeletion(){
				goBack();
				$('#phantomDeleteBtn').trigger('click');
			}

			function offerSave(notes){
				if(notes) {
					document.getElementById("textarea_feedback").style.display="inherit";
				}
