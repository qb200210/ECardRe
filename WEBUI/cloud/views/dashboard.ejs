				document.getElementById("facebook_btn").href = "https://www.facebook.com/sharer/sharer.php?u=" + encodeURIComponent('https://www.micklestudios.com/search?id=<%=ecardId%>&fn=<%= firstName %>&ln=<%= lastName %>') + "&t=KnoWell";
				document.getElementById("twitter_btn").href = "https://twitter.com/intent/tweet?source=" + encodeURIComponent('https://www.micklestudios.com/search?id=<%=ecardId%>&fn=<%= firstName %>&ln=<%= lastName %>') + "&text=KnoWell:"+encodeURIComponent('https://www.micklestudios.com/search?id=<%=ecardId%>&fn=<%= firstName %>&ln=<%= lastName %>');
