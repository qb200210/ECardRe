<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<com.micklestudios.knowells.utils.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view_scanned"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_300"
    android:scrollbars="none" >
	<RelativeLayout
	    android:id="@+id/backlayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    <RelativeLayout
        android:focusable="true" 
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <com.micklestudios.knowells.utils.SquareRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    	<View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:background="@color/grey_300"
         android:layout_marginTop="30dp"
         android:layout_marginBottom="30dp"
        />
    	<TextView
    	    android:id="@+id/motto"
    	    android:paddingLeft="30dp"
    	    android:paddingRight="30dp"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerInParent="true"
    	    android:text="心若在，梦就在"
    	    />
    	</com.micklestudios.knowells.utils.SquareRelativeLayout>

        <com.micklestudios.knowells.utils.MyViewPager
        android:id="@+id/pager22"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

        <!-- This is the note panel -->

        <RelativeLayout
            android:id="@+id/note_panel"
            android:layout_below="@id/pager22"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:paddingBottom="30dp"
            android:background="@color/green_300"
            android:orientation="horizontal" 
            android:visibility="visible">"

            <RelativeLayout
                android:id="@+id/panel_bar"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="5dp"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical|left" >

                    <ImageView
                        android:id="@+id/panel_note_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="2dp"
                        android:src="@drawable/note" >
                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/panel_recorder_holder"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical|left" >

                    <ImageView
                    	android:id="@+id/panel_recorder_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="2dp"
                        android:src="@drawable/recorder" >
                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"
                    android:layout_toLeftOf="@id/panel_recorder_holder"
                    android:gravity="center_vertical|left" >

                    <ImageView
                        android:id="@+id/panel_play_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="2dp"
                        android:src="@drawable/play" >
                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="9dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="120dp"
                    android:layout_marginTop="9dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/LastUpdated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="Last modified"
                        android:textColor="@color/grey_100"
                        android:textSize="12sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/panel_when_where_what_met"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/panel_bar"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:padding="2dp"
                        android:src="@drawable/ic_clock" >
                    </ImageView>
                    
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:text="We met on" />

                    <TextView
                        android:id="@+id/DateAdded2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:background="@null"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="normal"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:padding="2dp"
                        android:src="@drawable/ic_location" >
                    </ImageView>

                    <EditText
                        android:id="@+id/PlaceAdded2"
                        android:nextFocusUp="@id/PlaceAdded2" 
                        android:nextFocusLeft="@id/PlaceAdded2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:background="@null"
                        android:hint="Where did we meet?"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="normal"
                          />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:padding="2dp"
                        android:src="@drawable/ic_event" >
                    </ImageView>

                    <EditText
                        android:id="@+id/EventAdded2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:hint="We met in which event?"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="normal"
                          />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/panel_when_where_what_met"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/myrect_note_text"
                android:orientation="vertical" >
                
                <EditText
                    android:id="@+id/EditNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="top"
                    android:background="@null"
                    android:hint="Context of conversations or things worth noting"
                    android:maxLength="1000"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="normal"
                      />
            </LinearLayout>
        </RelativeLayout>

        <!-- This is the end of note panel -->
        
    </RelativeLayout>
	</RelativeLayout>
</com.micklestudios.knowells.utils.MyScrollView>
<RelativeLayout
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="#aa000000" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal|center_vertical"
            android:background="#cc000000" 
            android:orientation="vertical" >

    		<TextView
    		    android:id="@+id/time_left"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:hint="30 Seconds Remaining"
    		    android:paddingBottom="10dp"
    		    android:paddingLeft="10dp"
    		    android:paddingRight="10dp"
    		    android:paddingTop="10dp"
    		    android:textColor="@color/white"
    		    android:textSize="20sp" />

    		<ImageView
    		    android:id="@+id/stop_recording"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:paddingBottom="10dp"
            	android:paddingLeft="10dp"
            	android:paddingRight="10dp"
            	android:paddingTop="10dp" 
    		    android:src="@drawable/ic_action_stop" />
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>